{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020", // Changé de "Node16" à "es2020"
    "moduleResolution": "bundler", // Changé de "node16" à "bundler"
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "types": ["node", "jasmine"],
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}